<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddTransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radio_group_switch_between_transactions_types"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_button_expense"
                android:textColor="@drawable/radio_button_transactions_text_selector"
                android:background="@drawable/radio_button_transactions_selector"
                android:button="@android:color/transparent"
                android:paddingVertical="10dp"
                android:width="120dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheltuiala" />
            <RadioButton
                android:id="@+id/radio_button_income"
                android:textColor="@drawable/radio_button_transactions_text_selector"
                android:background="@drawable/radio_button_transactions_selector"
                android:button="@android:color/transparent"
                android:paddingVertical="10dp"
                android:width="120dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venit" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/addTransactionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>